<Window x:Class="OSFRLauncher.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    WindowStartupLocation="CenterScreen"
    ResizeMode="CanMinimize"
    Title="OSFR Launcher" Height="600" Width="900">
    <Grid>
        <MediaElement Stretch="UniformToFill" Name="background" >
            <MediaElement.Triggers>
                <EventTrigger RoutedEvent="MediaElement.Loaded">
                    <EventTrigger.Actions>
                        <BeginStoryboard>
                            <Storyboard>
                                <MediaTimeline Source="images/background.mp4" Storyboard.TargetName="background" RepeatBehavior="Forever" />
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger.Actions>
                </EventTrigger>
            </MediaElement.Triggers>
        </MediaElement>
        <Image Stretch="Uniform" Source="images/OSFRLogo.png" VerticalAlignment="Center" HorizontalAlignment="Center" Height="500" Margin="10,-120,0,0"/>
        <ProgressBar x:Name="progressBar" Height="30" Width="520" HorizontalAlignment="Center" Margin="0,180,0,-15" VerticalAlignment="Center" Opacity="0.6" Visibility="Hidden"/>
        <TextBlock Name="Version" Text="Version 1.0.0" Height="20" FontSize="14" Foreground="#DDFFFFFF" Margin="0,530,0,0" VerticalAlignment="Top" MinWidth="150" Padding="10,1,10,1" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" HorizontalAlignment="Center" Width="49" TextAlignment="Center" Opacity="0.4"/>
        <TextBlock Name="StatusInfo" Text="" Height="20" FontSize="14" Foreground="#DDFFFFFF" Margin="0,410,0,0" VerticalAlignment="Top" MinWidth="150" Padding="10,1,10,1" FontFamily="Yu Gothic UI Semibold" FontWeight="Bold" HorizontalAlignment="Center" Width="49" TextAlignment="Center" Opacity="0.9"/>
        <Button Name="Button" Content="Install" Click="Download" Height="50" FontSize="28" FontWeight="Bold" Foreground="#DDFFFFFF" VerticalAlignment="Center" HorizontalAlignment="Center" MinWidth="150" Padding="10,1,10,1" FontFamily="Yu Gothic UI Semibold" Margin="0,0,0,-180" BorderThickness="1,1,1,1" Opacity="0.85" RenderTransformOrigin="0.5,0.5" ClickMode="Press" Cursor="Hand" ForceCursor="True">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF64F73C" Offset="0.1"/>
                    <GradientStop Color="#0a9411" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
            <Button.Resources>
                <Style TargetType="{x:Type Border}">
                    <Setter Property="CornerRadius" Value="5"/>
                </Style>
            </Button.Resources>
        </Button>
        
    </Grid>
    <Window.TaskbarItemInfo>
        <TaskbarItemInfo x:Name="taskbar"/>
    </Window.TaskbarItemInfo>
</Window>